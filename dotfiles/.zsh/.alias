########################################
### Cargo alias
########################################
if command -v cargo > /dev/null ; then
  alias cr="cargo run"
  alias cb="cargo build"
fi

########################################
### Bash alias
########################################
alias nv="nvim"
alias py="python3"
alias sudo="sudo -v; sudo "
alias cp="cp -v"
alias mkdir='mkdir -p'
#alias bat='batcat'

alias more='less'
export LESSOPEN="| src-hilite-lesspipe.sh %s"
export LESS=" -R "
alias less='less -m -N -g -i -J --underline-special --SILENT'
alias l="LC_COLLATE=C ls --color -lao | grep '^d' && LC_COLLATE=C ls -loa --color | grep '^-' && LC_COLLATE=C ls -lao --color | grep '^l'"

########################################
### Taskwarrior alias
########################################
if command -v task > /dev/null ; then
  alias tw="task"
  alias twa="task add"
  alias twe="task edit"
  alias tt="task top"
  alias tcn="task context none"
  alias tcl="task context levelten"
  alias tcc="task context cocoon"
  alias tch="task context home"
  alias tcb="task context builds"
  if command -v vit > /dev/null ; then
    alias twv="vit"
  fi
fi
########################################
### Tmux alias
########################################
if command -v tmux > /dev/null ; then
  alias tls="tmux list-sessions"
  alias tn="tmux new-session -t"
  alias td="tmux detach"
  alias ta="tmux attach-session -t"
  alias tr="tmux rename-session -t"
  alias tksa="tmux kill-server"
  alias tkst="tmux kill-session -t"

  alias session-workspace="
    tmux new-session -t template \; \
      split-window -h -p 40 \; \
      send-keys 'htop' C-m \; \
      split-window -v -p 30 \; \
      send-keys 'wd obsidian' C-m \; \
      select-pane -t 2 \; \
  "

  alias session-monitoring="
    tmux new-session -t monitoring \; \
      send-keys 'htop' C-m \; \
      split-window -v -p 20 \; \
      split-window -h -p 50 \; \
      send-keys 'wd uy' C-m \; \
      select-pane -t 1 \; \
  "
  if command -v taskwarrior-tui > /dev/null ; then
    alias tui="taskwarrior-tui"
  fi
fi
